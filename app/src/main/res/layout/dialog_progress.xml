<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.crystal.crystalpreloaders.widgets.CrystalPreloader
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:crs_pl_bg_color="@color/text_color_hint"
        app:crs_pl_fg_color="@color/text_color_hint"
        app:crs_pl_size="small"
        app:crs_pl_style="ball_pulse" />

    <com.activedistribution.view.customfont.TextViewSans
        android:id="@+id/wait_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loader"
        android:layout_margin="@dimen/_10sdp"
        android:padding="5dp"
        android:text="Please Wait..."
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="18sp" />
</RelativeLayout>