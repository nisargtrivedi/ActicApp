<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/White">

        <com.activedistribution.utils.RectCornerImageView
            android:id="@+id/job_iv"
            android:layout_width="135dp"
            android:layout_height="125dp"
            android:scaleType="fitXY"
            android:src="@drawable/img2" />


        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/job_iv">

            <com.activedistribution.view.customfont.TextViewSansBold
                android:id="@+id/job_id_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#DH1KA1232"
                android:textColor="@color/selected_tab_color"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />
            <com.activedistribution.view.customfont.TextViewSansBold
                android:id="@+id/job_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#DH1kKA1232"
                android:layout_below="@+id/job_id_tv"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/iv_cal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/date_tv"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/job_name"
                android:src="@drawable/calender" />

            <com.activedistribution.view.customfont.TextViewSansBold
                android:id="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_name"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/iv_cal"
                android:text="Nov 14, 2018"
                android:textColor="@color/Black1"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <com.activedistribution.view.customfont.TextViewSansBold
                android:id="@+id/mesage_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cal"
                android:layout_marginTop="10dp"
                android:text="@string/quantity_of_flyers"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.activedistribution.view.customfont.TextViewSansBold
                android:id="@+id/quantity_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mesage_tv"
                android:text="2000"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <com.activedistribution.view.customfont.TextViewSansBold
                android:id="@+id/job_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantity_tv"
                android:text="Your job is in progress."
                android:textColor="@color/green"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/live_view"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/light_grey"/>

</LinearLayout>